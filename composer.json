{
    "name": "aeatech/transaction-manager-postgresql",
    "description": "PostgreSQL dialect layer for AEATech Transaction Manager, providing PostgreSQL-specific SQL behavior and extensions not covered by the core or common packages.",
    "keywords": ["aeatech", "transaction-manager", "transaction", "database", "PostgreSQL"],
    "license": "MIT",
    "type": "library",
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/AEATech/transaction-manager-core.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/AEATech/transaction-manager-doctrine-adapter.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/AEATech/transaction-manager-common-transactions.git"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "aeatech/transaction-manager-common-transactions": "dev-main",
        "aeatech/transaction-manager-core": "dev-main"
    },
    "require-dev": {
        "aeatech/transaction-manager-doctrine-adapter": "dev-main",
        "mockery/mockery": "^1.6.10",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-mockery": "^2.0",
        "phpunit/phpunit": "^11.5",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "AEATech\\TransactionManager\\PostgreSQL\\": "src/AEATech/TransactionManager/PostgreSQL"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AEATech\\Test\\TransactionManager\\PostgreSQL\\": "tests/AEATech/Test/TransactionManager/PostgreSQL"
        }
    },
    "archive": {
        "exclude": [
            "/docker",
            "/tests",
            "/phpunit.xml",
            "/phpstan.neon"
        ]
    }
}
